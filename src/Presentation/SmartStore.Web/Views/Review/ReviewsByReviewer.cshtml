@model IList<ReviewModel>

@using SmartStore.Web.Models.Reviews;
@{
    ViewBag.Title = "ReviewsByReviewer";
    Layout = "";
}
<div class="row">
    @foreach (var review in Model)
    {
        <div class="col-md-6 col-sm-12">
            @{ Html.RenderPartial("ReviewItemThumbnail", review);}
        </div>
    }
</div>
@if (Model.Count() != 0)
{
    <div class="row">
        <div class="page-actions col-md-12">
            <button class="btn btn-sm btn-dark btn-rounded">Load more...</button>
        </div>
    </div>
} else
{

}


