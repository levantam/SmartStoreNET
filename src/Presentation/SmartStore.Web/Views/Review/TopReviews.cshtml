@model IList<ReviewModel>

@using SmartStore.Web.Models.Reviews;

@{
    ViewBag.Title = "TopReviews";
    Layout = "";
}
<div class="heading heading-center">
    <h3 class="heading-title fs-h1">@T("Homepage.TopReview")</h3>
</div>
<div class="row">
    @foreach (var review in Model)
    {
        <div class="col-md-3">
            @{ Html.RenderPartial("ReviewItemThumbnail", review);}
        </div>
    }
</div>
